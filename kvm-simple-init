#!/bin/sh

# kvm-simple-init
# Description : Simple init script to manage KVM virtual machines
# URL : https://github.com/tmartinfr/kvm-simple-init
# Author : Thomas Martin <thomas@oopss.org>

set -e
WAIT_FOR_START=5        # Number of seconds to wait for VM start

usage() {
	cat <<EOT
$0 [start|stop|restart] VM"

VM should match a configuration file in /etc/kvm-simple-init/.
EOT
	exit 1
}

if [ $# -ne 2 ]; then
	usage
fi

vmname="$2"
vmfile="/etc/kvm-simple-init/$vmname"

if ! [ -r "$vmfile" ]; then
	echo "$vmfile not readable. Aborting."
	exit 2
fi

source $vmfile

# Test if VM is running by checking availability of the monitor port.
# Wait until $timeout seconds.
is_vm_running() {
	monitor_port=$1
	timeout=$2

	while [ $timeout -gt 0 ]; do
		if ! nc -z localhost $monitor_port; then
			exit 0
		fi
		sleep 1
		echo x
		timeout=$(($timeout - 1))
	done
}
}

if [ "$1" = "start" ]; then
	echo "Starting $vmname..."
	kvm $KVM_OPTS

	if is_vm_running $MONITOR_PORT $WAIT_FOR_START; then
		echo "VM started."
		exit 0
	else
		echo "Failed to start $vmname."
		exit 3
	fi
elif [ "$1" = "stop" ]; then
	echo "Stopping $vmname. Please wait."
	echo "system_powerdown" | nc localhost $MONITOR_PORT >/dev/null
fi

